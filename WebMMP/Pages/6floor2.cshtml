@page
@model SixthFloor2
@{
    ViewData["Title"] = "6 floor";
}


<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>МатМех 6 Этаж</title>
    <link rel="stylesheet" href="~/css/styles2.css">
</head>
<body>
    <div class="header">
        <h1>МатМех 6 Этаж</h1>
    </div>
    <div class="map-container">
        <svg viewBox="0 0 1000 450" xmlns="http://www.w3.org/2000/svg" class="map">
            <!-- лестница -->
            <svg width="1000" height="200">
                <!-- Прямоугольник для фона лестницы -->
                <rect x="361" y="51" width="33" height="98" class="stairway-bg" />

                <!-- Линии, изображающие ступени -->
                <line x1="361" y1="60" x2="394" y2="60" class="stairway-step" />
                <line x1="361" y1="70" x2="394" y2="70" class="stairway-step" />
                <line x1="361" y1="80" x2="394" y2="80" class="stairway-step" />
                <line x1="361" y1="90" x2="394" y2="90" class="stairway-step" />
                <line x1="361" y1="100" x2="394" y2="100" class="stairway-step" />
                <line x1="361" y1="110" x2="394" y2="110" class="stairway-step" />
                <line x1="361" y1="120" x2="394" y2="120" class="stairway-step" />
                <line x1="361" y1="130" x2="394" y2="130" class="stairway-step" />
                <line x1="361" y1="140" x2="394" y2="140" class="stairway-step" />
            </svg>

            <!-- серое -->
            <rect x="396" y="51" width="110" height="98" class="gray-rect"></rect>

            <!-- 601 -->
            <rect id="601" x="505" y="50" width="135" height="100" class="room" data-room="601" data-status="Свободна" data-equipment="Доска" data-size="Средняя">
                <title>Аудитория 601</title>
            </rect>
            <text x="560" y="105" class="roomLabel">601</text>

            <!-- 605 -->
            <rect id="605" x="640" y="50" width="135" height="100" class="room" data-room="605" data-status="Свободна" data-equipment="Доска" data-size="Средняя">
                <title>Аудитория 605</title>
            </rect>
            <text x="695" y="105" class="roomLabel">605</text>

            <!-- 607 -->
            <rect id="607" x="775" y="50" width="135" height="100" class="room" data-room="607" data-status="Свободна" data-equipment="Доска" data-size="Средняя">
                <title>Аудитория 607</title>
            </rect>
            <text x="830" y="105" class="roomLabel">607</text>

            <!-- 609 -->
            <rect id="609" x="910" y="50" width="65" height="100" class="room" data-room="609" data-status="Свободна" data-equipment="Доска" data-size="Маленькая">
                <title>Аудитория 609</title>
            </rect>
            <text x="930" y="105" class="roomLabel">609</text>




            <!-- 612 -->
            <rect id="612" x="360" y="250" width="140" height="100" class="room" data-room="612" data-status="Свободна" data-equipment="Доска" data-size="Средняя">
                <title>Аудитория 612</title>
            </rect>
            <text x="417" y="305" class="roomLabel">612</text>

            <!-- 614 -->
            <rect id="614" x="500" y="250" width="135" height="100" class="room" data-room="614" data-status="Свободна" data-equipment="Доска" data-size="Средняя">
                <title>Аудитория 614</title>
            </rect>
            <text x="550" y="305" class="roomLabel">614</text>

            <!-- серое -->
            <rect x="636" y="251" width="145" height="98" class="gray-rect"></rect>

            <!-- 618 -->
            <rect id="618" x="780" y="250" width="135" height="100" class="room" data-room="618" data-status="Свободна" data-equipment="Доска" data-size="Средняя">
                <title>Аудитория 618</title>
            </rect>
            <text x="835" y="305" class="roomLabel">618</text>

            <!-- 620 -->
            <rect id="620" x="915" y="250" width="60" height="100" class="room" data-room="620" data-status="Свободна" data-equipment="Доска" data-size="Маленькая">
                <title>Аудитория 620</title>
            </rect>
            <text x="933" y="305" class="roomLabel">620</text>

            <line x1="40" y1="220" x2="330" y2="150" stroke="black" stroke-width="2" />

            <!-- 608 -->
            <rect id="608" x="225" y="247" width="110" height="100" class="room" data-room="608" data-status="Свободна" data-equipment="Доска" data-size="Средняя" transform="rotate(-15 360 250)">
                <title>Аудитория 608</title>
            </rect>
            <text x="265" y="302" transform="rotate(-15 360 250)" class="roomLabel">608</text>

            <!-- серое -->
            <rect x="126" y="248" width="98" height="98" class="gray-rect" transform="rotate(-15 360 250)"></rect>

            <!-- 602 -->
            <rect id="602" x="45" y="247" width="80" height="100" class="room" data-room="602" data-status="Свободна" data-equipment="Доска" data-size="Средняя" transform="rotate(-15 360 250)">
                <title>Аудитория 602</title>
            </rect>
            <text x="70" y="302" transform="rotate(-15 360 250)" class="roomLabel">602</text>

            <!-- Другие аудитории можно добавить аналогично -->
        </svg>
        <a class="arrow arrow-right" asp-area="" asp-page="/6floor" title="Вправо">→</a>
    </div>

    <!-- Всплывающее окно для информации -->
    <div class="popup" id="popup">
        <div class="popup-content">
            <span class="close" onclick="closePopup()">&times;</span>
            <h2 id="room-title">Аудитория</h2>
            <p id="room-info">Информация об аудитории</p>
            <button onclick="toggleStatus()">Изменить статус</button>
        </div>
    </div>

    <script src="~/js/script2.js"></script>
</body>
</html>
